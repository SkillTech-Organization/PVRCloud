Function .onInit
 ; !insertmacro MUI_LANGDLL_DISPLAY

  ; Check .NET version
  StrCpy $dotnetOK "${X_TRUE}"
  StrCpy $sqlCeOK "${X_TRUE}"


  SetOutPath "$TEMP"
  SetOverwrite try

  Call checkDotNet

  ${If} $dotnetOK != "${X_TRUE}"

   ;  SetDetailsView hide

     MessageBox MB_OK|MB_ICONINFORMATION "${X_DOTNETMSG}"

     inetc::get /POPUP  "http://download.microsoft.com/download/0/6/1/061F001C-8752-4600-A198-53214C69B51F/dotnetfx35setup.exe" \
                /caption ".NET 4.0 letöltése és telepítése" \
                /canceltext "Mégsem" \
                "http://download.microsoft.com/download/0/6/1/061F001C-8752-4600-A198-53214C69B51F/dotnetfx35setup.exe" \
                "$TEMP\dotnetfx35setup.exe" \
                /end
     Pop $0

     ${If} $0 != "${X_OK}"
           Delete "$TEMP\dotnetfx35setup.exe"
           MessageBox MB_OK|MB_ICONINFORMATION "Sikertelen a keretrendszer letöltése:$0"
           Abort "Sikertelen a keretrendszer letöltése:$0"
     ${EndIf}

     StrCpy $dotnetOK "${X_TRUE}"

     ExecWait "$TEMP\dotnetfx35setup.exe"
     Delete "$TEMP\dotnetfx35setup.exe"

     Call checkDotNet
     ${If} $dotnetOK != "${X_TRUE}"
           MessageBox MB_OK|MB_ICONINFORMATION "A keretrendszer telepítése megszakítva. - A telepítõprogram kilép -"
           Abort "A keretrendszer telepítése megszakítva."
     ${EndIf}
   ; SetDetailsView show
  ${EndIf}


;**************************************
FunctionEnd



 Function checkDotNet

 StrCpy $dotnetOK "${X_TRUE}"
  ; Check .NET version

  ReadRegDWORD $iver HKLM 'Software\Microsoft\NET Framework Setup\NDP\v3.5' Install
  ${If} $iver == ''
        StrCpy $dotnetOK "${X_FALSE}"
  ${EndIf}

  ${If} $dotnetOK == "${X_FALSE}"
        ReadRegDWORD $spver HKLM 'Software\Microsoft\NET Framework Setup\NDP\v3.5' SP
        ${If} $spver < 1
                StrCpy $dotnetOK "${X_FALSE}"
        ${EndIf}
  ${EndIf}
FunctionEnd

Function .onInstSuccess
  WriteRegStr HKLM "${PRODUCT_INI_REGKEY}" "ini" "$INSTDIR"
  AccessControl::GrantOnRegKey HKLM  ${PRODUCT_INI_REGKEY} "Everyone" "FullAccess"
/*
  WriteRegStr HKLM "${PRODUCT_LOG_REGKEY}" "log" "$INSTDIR"
  AccessControl::GrantOnRegKey HKLM  ${PRODUCT_LOG_REGKEY} "Everyone" "FullAccess"
*/

  ExecWait "$INSTDIR\RegAsm.exe VBInterface.dll    /tlb > $INSTDIR\RegAsm.log"
  ExecWait "$INSTDIR\RegAsm.exe VBInterface.dll    /codebase >>$INSTDIR\RegAsm.log"
FunctionEnd

Section "PMap" SEC01

 SetOutPath "$INSTDIR"
